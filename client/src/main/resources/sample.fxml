<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.1"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="NettyController">
    <AnchorPane fx:id="passwordPane" prefHeight="200.0" prefWidth="200.0">
        <TitledPane alignment="CENTER" contentDisplay="CENTER" layoutX="182.0" layoutY="196.0" maxHeight="189.0"
                    maxWidth="404.0" text="Welcome to my cloud">
            <AnchorPane prefHeight="220.0" prefWidth="417.0">
                <Label layoutX="86.0" layoutY="46.0" text="Login"/>
                <TextField fx:id="loginText" layoutX="197.0" layoutY="41.0"/>
                <PasswordField fx:id="passwordText" layoutX="197.0" layoutY="83.0"/>
                <Label layoutX="86.0" layoutY="88.0" text="Password"/>
                <Button fx:id="signIn" layoutX="242.0" layoutY="134.0" mnemonicParsing="false" onAction="#signIn"
                        prefWidth="80.0" text="Sign in"/>
                <Button fx:id="cancel" layoutX="333.0" layoutY="134.0" mnemonicParsing="false" onAction="#cancel"
                        prefWidth="80.0" text="Cancel"/>
                <Button fx:id="signUp" layoutX="148.0" layoutY="134.0" mnemonicParsing="false" onAction="#signUp"
                        prefWidth="80.0" text="Sign up"/>
                <Label layoutX="14.0" layoutY="14.0" prefHeight="16.0" prefWidth="399.0"/>
                <Label fx:id="errorText" alignment="CENTER" contentDisplay="CENTER" layoutX="24.0" layoutY="14.0"
                       prefHeight="16.0" prefWidth="387.0"/>
            </AnchorPane>
        </TitledPane>
    </AnchorPane>
    <AnchorPane fx:id="mainPane" prefHeight="600.0" prefWidth="800.0" visible="false">
        <Button fx:id="delete" layoutX="725.0" layoutY="560.0" mnemonicParsing="false" onAction="#delCommand"
                text="Delete"/>
        <ListView fx:id="listViewServer" layoutX="14.0" layoutY="60.0" prefHeight="490.0" prefWidth="380.0"/>
        <TextField fx:id="text" layoutX="14.0" layoutY="560.0" prefHeight="26.0" prefWidth="623.0"/>
        <ListView fx:id="listViewClient" layoutX="406.0" layoutY="60.0" prefHeight="490.0" prefWidth="380.0"/>
        <Label layoutX="14.0" layoutY="44.0" text="Server"/>
        <Label layoutX="406.0" layoutY="44.0" text="Client"/>
        <Label fx:id="message" layoutX="15.0" layoutY="15.0" minHeight="25.0" minWidth="770.0"/>
        <Label fx:id="command" layoutX="700.0" layoutY="28.0" minHeight="25.0" minWidth="86.0" prefHeight="25.0"
               prefWidth="86.0" visible="false"/>
        <Button fx:id="copy" layoutX="651.0" layoutY="560.0" mnemonicParsing="false" onAction="#copyCommand"
                prefHeight="26.0" prefWidth="61.0" text="Copy"/>
    </AnchorPane>
    <columnConstraints>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
    </rowConstraints>
</GridPane>
